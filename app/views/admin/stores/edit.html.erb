<%= form_for([:admin, @store]) do |f| %>
  <div class="form_group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form_group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="form_group">
    <%= f.label :image %>
    <%= f.text_field :image %>
  </div>
  <% if current_user.platform_admin? %>
  <div class="form_group">
    <%= f.label :status %><br />
    <%= f.label :status, "Online" %>
    <%= f.radio_button :status, "online", id: "online" %>
    <%= f.label :status, "Offline" %>
    <%= f.radio_button :status, "offline", id: "offline" %>
  </div>
  <% end %>
  <%= f.submit class: "btn btn-success" %>
<% end %>


<%= link_to "Back", :back %>
