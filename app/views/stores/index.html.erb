<div id="main_title">
  <h1>Stores</h1>
</div>

<div id="main_body">
  <div class="row">
    <% @stores.each do |store| %>
    <div class="col-md-2 store">
      <div>
        <ul class="body_background_img">
          <li class="card-img-top"> <%= image_tag store.image, size: '150' %> </li>
          <li class="store_title"> <%= link_to "#{store.name}", store_path(store) %> </li>
        </ul>
      </div>
    </div>
    <% end %>
  </div>
</div>
