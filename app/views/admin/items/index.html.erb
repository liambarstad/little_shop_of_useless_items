<h3>All Items</h3>

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Description</th>
    <th>Price</th>
    <th>Status</th>
    <th></th>
  </tr>
  <% @items.each do |item| %>
    <tr>
      <td><%= image_tag(item.image, class: "thumbs") %></td>
      <td><%= link_to item.title, item_path(item) %></td>
      <td><%= item.description %></td>
      <td><%= item.price %></td>
      <td><%= item.status %></td>
      <td><%= button_to "Edit", edit_admin_store_item_path(@store, item), class: "btn btn-primary", method: :get %></td>
    </tr>
  <% end %>
</table>
