<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>
    </title>

    <link href="https://fonts.googleapis.com/css?family=Fredericka+the+Great|Oswald|Quicksand" rel="stylesheet">


  </head>
  <body>
    <div class="text-center">
      <div class="item-show-title">

      <h1><%= @item.title %></h1>
    </div>

    <div class="container">
      <div class="item-show">

      <div class="row">
        <div class="col">
          <%= image_tag(@item.image, class: "card-img-top", style: 'height:50%;width:auto;') %>
        </div>
        <div class="col">
          <div class="card text-center" style="width: 30rem; margin: auto;">
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                  <h5><%= @item.description %></h5>
              </li>
            </ul>
            <div class="card-block">
              <div class="item-show-info">

              <%= number_to_currency(@item.price) %>
              <br><br>
              <% if @item.active? %>
                <%= button_to "Add to Cart", cart_path(item_id: @item.id), class: 'add-to-cart btn btn-success' %>
              <% else %>
                <p>Item Retired</p>
              <% end %>
              <% if current_user && current_user.is_admin? %>
                <br />
                <%= button_to "Toggle Retire", retire_path(@item), class: "btn btn-danger" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>



  </body>
</html>
