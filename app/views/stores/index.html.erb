<div id="main_background">
  <div id="main_title">
    <h1>Stores</h1>
  </div>
</div>

<div id="main_body">
  <div class="row">
    <% @stores.each do |store| %>
      <% if !(store.pending?) %>
        <div class="col-md-2 store">
          <div>
            <ul>
              <li class="card-img-top store_image"> <%= image_tag store.image, size: '150' %> </li>
              <li class="store_title"> <%= link_to "#{store.name}", store_path(store) %> </li>
            </ul>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
